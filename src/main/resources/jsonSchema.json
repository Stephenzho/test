{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 4
    },
    "url": {
      "type": "string",
      "pattern": "(http[s]{0,1}|ftp)://[a-zA-Z0-9\\.\\-]+\\.([a-zA-Z]{2,4})(:\\d+)?(/[a-zA-Z0-9\\.\\-~!@#$%^&*+?:_/=<>]*)?"
    },
    "age": {
      "type": "integer"
    }
  },
  "required": [
    "name"
  ],
  "additionalProperties": false
}